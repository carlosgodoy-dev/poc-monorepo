{
    "compilerOptions": {
        "target": "es6",
        "rootDir": "./",
        "outDir": "./build",
        "module": "commonjs",
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "esModuleInterop":true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "composite": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": ["node_modules", "build", "coverage"]
}